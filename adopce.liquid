<section class="black-cat between">
    <div class="container">
        <div class="global-headline">
            <div class="animate-top">
                <h2 class="sub-headline">
                    <span class="first-letter">K</span>oƒçky
                </h2>
            </div>
            <div class="animate-bottom">
                <h1 class="headline">k adopci</h1>
            </div>
        </div>
